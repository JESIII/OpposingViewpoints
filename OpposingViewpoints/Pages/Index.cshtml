@page
@using OpposingViewpoints.Models;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="text-center">
    <h1 class="display-4">Search for opposing articles</h1>
    <form method="post">
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Enter a topic you'd like opposing viewpoints on'" />
        <input type="submit" value="Submit" asp-page-handler="SearchArticles" />
    </form>
    @if (Model.SearchesInCache == true)
    {
        <a>Recent Searches:</a>

        <br>
        @foreach (CacheModel cachedSearch in Model.CachedSearches.Values)
        {
            <a>@cachedSearch.SearchTerm</a> <br>
        }

    }
</div>
